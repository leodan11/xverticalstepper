<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Stepper">
        <attr name="stepper_color_indicator" format="color|reference" />
        <attr name="stepper_color_text_indicator" format="color|reference" />
        <attr name="stepper_opened_step_index" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="StepContainer">
        <attr name="step_title" format="string|reference" />
        <attr name="need_validation" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="cv_color" format="color|reference" />
        <attr name="cv_color_start" format="color|reference" />
        <attr name="cv_color_end" format="color|reference" />
        <attr name="cv_color_direction">
            <flag name="left_to_right" value="1" />
            <flag name="right_to_left" value="2" />
            <flag name="top_to_bottom" value="3" />
            <flag name="bottom_to_top" value="4" />
        </attr>
        <attr name="cv_border" format="boolean|reference" />
        <attr name="cv_border_width" format="dimension|reference" />
        <attr name="cv_border_color" format="color|reference" />
        <attr name="cv_border_color_start" format="color|reference" />
        <attr name="cv_border_color_end" format="color|reference" />
        <attr name="cv_border_color_direction">
            <flag name="left_to_right" value="1" />
            <flag name="right_to_left" value="2" />
            <flag name="top_to_bottom" value="3" />
            <flag name="bottom_to_top" value="4" />
        </attr>
        <attr name="cv_shadow" format="boolean|reference" />
        <attr name="cv_shadow_color" format="color|reference" />
        <attr name="cv_shadow_radius" format="float|reference" />
        <attr name="cv_shadow_gravity">
            <flag name="center" value="1" />
            <flag name="top" value="2" />
            <flag name="bottom" value="3" />
            <flag name="start" value="4" />
            <flag name="end" value="5" />
        </attr>
    </declare-styleable>

</resources>